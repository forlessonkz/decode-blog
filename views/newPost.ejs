<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs', {title: 'New Post'}) %>
<body>
    <div class="base-width profile-page">
        <header class="base-right-left-padding">
            <a href="/" class="header-logo">
                Decode Blog
            </a>
            <div class="haeder-search">
                <form action="">
                    <input type="text" placeholder="Blog search">
                    <%- include('./partials/button', {icon: '/image/icons/haeder-saerch-icon.png', title: 'Search', link: ''}) %>
                </form>
            </div>
            <div class="header-user-profile-photo">
                <%- include('./partials/userLogo.ejs', {image: '/image/user-photo/user-logo.png'}) %>
            </div>
        </header>
        <div class="new-post-page base-right-left-padding">
            <div class="new-post-container  main-container">
                <h1 class="sections-header">
                    Новый блог
                </h1>
                <form 
                    class="new-post-form" 
                    action="/api/posts/new" 
                    method="POST" 
                    enctype="multipart/form-data"
                >

                    <input type="text" placeholder="Введите заголовок блога" name="postTitle">
                    <input list="options" id="choices" placeholder="Выберите категорию" name="postCategory">
                    <datalist id="options">
                        <% data.forEach((item) => { %>
                            <option value="<%= item._id %>" name="postCategory"><%= item.categoryTitle %></option>
                        <% }) %>
                    </datalist>
                
                    <fieldset>
                        <!-- <button type="submit" class="add-images-btn">
                            Выберите картинку
                        </button> -->
                        <input type="file" name="image">
                    </fieldset>

                    <div class="">
                        <textarea class="custom-input" placeholder="Введите описание блога" name="postDescription"></textarea>
                    </div>
                    <button type="submit" class="create-new-post">
                        Создать пост
                    </button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>